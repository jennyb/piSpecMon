[Unit]
Description=Pi Spectrum Monitor Web Server Service
After=multi-user.target
Wants=network-online.target psm.elasticsearch.service psm.worker.service
After=network-online.target psm.elasticsearch.service

[Service]
Type=idle
ExecStart=/usr/bin/python -u /home/ses/spectrum/piSpecMon/spectrum/server.py
Restart=always
RestartSec=1
WorkingDirectory=/home/ses/spectrum/piSpecMon/spectrum

[Install]
WantedBy=multi-user.target
