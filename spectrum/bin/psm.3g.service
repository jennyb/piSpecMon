[Unit]
Description=3G modem driver
After=network.target

[Service]
Type=idle
ExecStart=/home/ses/umtskeeper/umtskeeper --sakisoperators "USBINTERFACE='0' OTHER='USBMODEM' USBMODEM='12d1:1003' APN='3internet' APN_USER='0' APN_PASS='0'" --sakisswitches "--sudo --console" --devicename 'Huawei' --log --silent --monthstart 8 --nat 'no' --httpserver
Restart=always
RestartSec=1
WorkingDirectory=~
KillSignal=SIGINT

User=ses
Group=ses

[Install]
WantedBy=psm.target
